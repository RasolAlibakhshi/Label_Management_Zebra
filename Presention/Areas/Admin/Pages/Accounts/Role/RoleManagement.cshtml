@page
@model Presention.Areas.Admin.Pages.Accounts.Role.RoleManagementModel
@{
    ViewData["Title"] = "مدیریت نقش ها";
}

@await Component.InvokeAsync("AdminHead")


@if (TempData["ValiDation"] != null)
{
    <div class="alert alert-info">
        @TempData["ValiDation"]
    </div>
}

<div class="container">
    <div class=" mt-4 p-4 ">
        
        <form method="post">
            <div class="input-group mb-3" dir="ltr">
                <button class="btn btn-outline-success" type="submit" id="button-addon1">افزودن نقش جدید</button>
                <input type="text" name="Name" class="form-control text-center" placeholder="لطفا نام نقش جدید را وارد کنید"  aria-label="Example text with button addon" aria-describedby="button-addon1">
            </div>
        </form>

        <h3 class="mb-3 text-center">اطلاعات نقش ها</h3>

        <table class="table table-striped text-center">
            <thead>
                <tr>
                    
                    <th>نام</th>
                    <th>تاریخ ثبت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>

                @if (!Model.RoleView.Any())
                {
                    <tr>
                        <td colspan="3">هنوز اطلاعاتی ثبت نشده است.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.RoleView)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CreationDate</td>
                            <td>
                                <div class="btn-group" dir="ltr">
                                    <a asp-page="EditeRole" asp-route-id="@item.Id" class="btn btn-success">ویرایش</a>

                                    @if (item.IsDeleted)
                                    {
                                        <a asp-route-id="@item.Id" asp-page-handler="Restore" class="btn btn-info ">فعال کردن نقش</a>
                                    }
                                    else
                                    {
                                        <a asp-route-id="@item.Id" asp-page-handler="Remove" class="btn btn-danger">غیر فعال کردن نقش</a>
                                    }
                                </div>
                            </td>
                                
                            
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>

