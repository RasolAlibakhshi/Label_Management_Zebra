@page
@model Presention.Areas.Admin.Pages.Accounts.AddAccountModel
@{
    ViewData["Title"] = "افزودن کاربر";
}
@await Component.InvokeAsync("AdminHead")

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="mb-4 text-center">فرم افزودن کاربر</h3>
        <form method="post" enctype="multipart/form-data">
            <!-- فیلد نام -->
            <div class="mb-3">
                <label for="name" class="form-label">نام:</label>
                <input type="text" class="form-control w-10" id="name" name="Name" placeholder="نام لیبل را وارد کنید" required>
            </div>

            <!-- فیلد توضیحات -->
            <div class="mb-3">
                <label for="description" class="form-label">توضیحات:</label>
                <textarea class="form-control" id="description" name="Description" rows="3" placeholder="توضیحات را وارد کنید"></textarea>
            </div>

            <!-- فیلد آپلود فایل -->
            <div class="mb-3">
                <label for="file" class="form-label">انتخاب فایل:</label>
                <input type="file" class="form-control" id="file" name="LabelURL">
            </div>

            <!-- سلکت لیست -->
            <div class="mb-3">
                <label for="selectList" class="form-label">سالن مورد نظر را انتخاب کنید:</label>
                <select asp-items="@(new SelectList(Model.HallSelectview,"ID","Name"))" class="form-select" id="selectList" name="HallID">
                    <option value="0">نتخاب ...</option>
                </select>
            </div>

            <!-- دکمه ارسال -->
            <button type="submit" class="btn btn-success w-100">ثبت اطلاعات</button>
        </form>
    </div>
</div>