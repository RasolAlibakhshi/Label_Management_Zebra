@page
@model Presention.Areas.Admin.Pages.Label.AddLabelModel
@{
    ViewData["Title"] = "افزودن همبافت";
}

@await Component.InvokeAsync("AdminHead");

<div class="container">
    <fieldset>
        <legend class="text-center">فرم افزودن همبافت</legend>
        <form method="post" class="form-control">

            <div class="row g-2 align-items-center">
                <div class="col-12 col-sm-3">
                    <label for="15">ماشین:</label>
                    <select class="form-select" id="15" name="MachineID" asp-items="@(new SelectList(Model.MachineSelectView, "ID", "Name"))">
                        <option value="0">ماشین مورد نظر را انتخاب کنید</option>
                    </select>
                </div>
            </div>

            <hr>

            <div class="row g-2 align-items-center mt-2 mb-2">
                <div class="col-12 col-sm-3">
                    <label for="1"> همبافت:</label>
                    <input class=" text-center form-text form-control" id="1" name="Interwoven" type="text" placeholder="همبافت">
                </div>
                <div class="col-12 col-sm-3">
                    <label for="2">دنیر:</label>
                    <input class=" text-center form-text form-control" id="2" name="Den" type="text" placeholder="دنیر">
                </div>
                <div class="col-12 col-sm-3">
                    <label for="3">فیلامنت:</label>
                    <input class=" text-center form-text form-control" id="3" name="Filament" type="text" placeholder="فبلامنت">
                </div>
                <div class="col-12 col-sm-2">
                    <label for="4">لا:</label>
                    <input class=" text-center form-text form-control" id="4" name="Ply" type="text" placeholder="لا">
                </div>
            </div>

            <div class="row g-2 align-items-center mt-2 mb-2">
                <div class="col-12 col-sm-3">
                    <label for="5"> کد رنگ:</label>
                    <input class=" text-center form-text form-control" id="5" name="ColorCode" type="text" placeholder="کد رنگ">
                </div>
                <div class="col-12 col-sm-3">
                    <label for="6">مینگل:</label>
                    <input class=" text-center form-text form-control" id="6" name="Mingel" type="text" placeholder="مینگل">
                </div>
                <div class="col-12 col-sm-3">
                    <label for="7">جهت تاب:</label>
                    <input class=" text-center form-text form-control" id="7" name="direction" type="text" placeholder="جهت تاب">
                </div>
                <div class="col-12 col-sm-2">
                    <label for="8">نوع نخ:</label>
                    <input class=" text-center form-text form-control" id="8" name="YarnType" type="text" placeholder="نوع نخ">
                </div>

            </div>


            <div class="row g-2 align-items-center mt-2 mb-2">
                <div class="col-12 col-sm-3">
                    <label for="9"> فیلد خالی 1:</label>
                    <input class=" text-center form-text form-control" id="9" type="text" name="Emptyfield1" placeholder="فیلد خالی 1">
                </div>
                <div class="col-12 col-sm-3">
                    <label for="10">فیلد خالی 2:</label>
                    <input class=" text-center form-text form-control" id="10" type="text" name="Emptyfield2" placeholder="فیلد خالی 2">
                </div>
                <div class="col-12 col-sm-3">
                    <label for="11">فیلد خالی 3:</label>
                    <input class=" text-center form-text form-control" id="11" type="text" name="Emptyfield3" placeholder="فیلد خالی 3">
                </div>
                <div class="col-12 col-sm-2">
                    <label for="12">فیلد خالی 4:</label>
                    <input class=" text-center form-text form-control" id="12" type="text" name="Emptyfield4" placeholder="فیلد خالی 4">
                </div>

            </div>



            <div class="row g-2 align-items-center mt-2 mb-2">
                <div class="col-12 ">
                    <label for="13"> توضیحات:</label>
                    <textarea name="Description" class="form-text form-control" id="13" rows="4" placeholder="لطفا توضیحات کامل لیبل را در این بخش قرار دهید"></textarea>
                </div>


            </div>

            <div class="row  justify-content-center  text-center">

                <div class="col-6 mt-2"><button class="btn btn-success" type="submit">ثبت اطلاعات</button></div>
                <div class="col-6 mt-2"><button class="btn btn-info" type="reset">پاک سازی اطلاعات</button></div>


            </div>




        </form>

    </fieldset>
</div>